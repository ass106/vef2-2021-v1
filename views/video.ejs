<%- include('header') -%> 
<div class="col">
    <div class="figure w-100">
        <video class="figure-img img-fluid w-100" controls width="250">
            <source src=<%= video.video %> >
        </video>
        <p class="figure-caption"><%= video.description %> </p>
    </div>
    <div class="mt-5 mb-5">
    </div>
    <div>
        <h2 class="font-weight-bold mb-4">Tengd myndb√∂nd</h2>
        <div class="row">
            <% videos.forEach(function(check, j, arr){ -%>
                <% if (video.related.includes(check.id)) { %>
                    <div class="col-sm-4">
                        <div class="my-2">
                            <a href='/video?id=<%=check.id %>' >
                                <div style="background-image: url('<%=check.poster%>'); background-size: cover; height: 200px;" alt="<%= check.description %>" class="img-fluid card-img-top d-flex align-items-end justify-content-end">
                                    <span class="text-light m-2 p-1" style="background-color: rgba(0, 0, 0, 0.5);"><%= locals.tools.minSecFormat(check.duration) %></span>
                                </div>
                                <div>
                                    <h6 class="card-title my-2"><a href='/video?id=<%=check.id %>' ><%= check.title %></a></h6>
                                    <p class="card-text my-2"><%= locals.tools.uploadedFormat(check.created)%></p>
                                </div>
                            </a>
                        </div>
                    </div>
                <% } %>
            <% }); -%>
        </div>
        <hr/>
        <div class="row justify-content-center mt-4 mb-4">
            <a class="text-center" href='/'>Til baka</a>
        </div>
    </div>
</div>
